@using TourPortal.Client.Areas.Shared
<CascadingAuthenticationState>
    <CascadingBlazoredModal>
        <Router AppAssembly="@typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="routeData" DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <NoAuthorizedError />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <AuthorizeView>
                    @*<NotAuthorized>
                        <LayoutView Layout="@typeof(MainLayout)">
                            <DefaultError/>
                        </LayoutView>
                    </NotAuthorized>*@
                    <Authorized>
                        <LayoutView Layout="@typeof(AreaLayout)">
                            <LayoutError/>
                        </LayoutView>
                    </Authorized>
                </AuthorizeView>
                <LayoutView Layout="@typeof(MainLayout)">
                    <DefaultError/>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingBlazoredModal>
</CascadingAuthenticationState>
