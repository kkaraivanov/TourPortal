@using TourPortal.Infrastructure.Global.Types

@code
{
	protected override async Task OnInitializedAsync()
	{
	    var state = await _state.GetAuthenticationStateAsync();
	    if (state.User.Identity.IsAuthenticated)
	    {
	        if (state.User.IsInRole(Security.Role.Owner) || state.User.IsInRole(Security.Role.User))
	        {
	            NavigationManager.NavigateTo("/user/notauthorized", true);
	        }
	        else
	        {
	            NavigationManager.NavigateTo("/administrator/notauthorized", true);
	        }
	    }
	}
}