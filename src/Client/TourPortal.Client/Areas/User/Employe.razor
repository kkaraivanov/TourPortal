                        <RegisterEmploye EmployeHasAdded="@EmployeHasAdded" />
                    </div>
                </div>
            </div>
            <EmployesTableComponent ChangeEmploye="OnChangeEmploye" />
        }
        else
        {
            <ChangeEmployeComponent EmployeId="@EmployeId" ChangeEmploye="OnChangeEmploye" />
        }
    </PageBody>
</PageModelComponent>
